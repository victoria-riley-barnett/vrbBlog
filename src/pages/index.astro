---
import BaseLayout from '../layouts/BaseLayout.astro';
import GitHubStats from '../components/GitHubStats.svelte';
import { getGitHubStats } from '../lib/github.js';
import { getCollection } from 'astro:content';

const latestPosts = (await getCollection('posts'))
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 4);

const title = 'Victoria Barnett';
const description = 'Victoria\'s personal website and blog.';
const permalink = Astro.site.href;

const githubStats = await getGitHubStats();
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>I'm <a href="/about">Victoria</a></h1>
      <p>
        Software engineer, open-source enthusiast, and community organizer based in San Francisco.
      </p>
      <div class="stats-section">
        <GitHubStats starCount={githubStats.starCount} />
      </div>
      <section class="latest-posts">
        <h2>Latest Thoughts</h2>
        <div class="posts-grid">
          {latestPosts.map(post => (
            <a href={`/blog/${post.data.slug}`} class="post-card-link">
              <article class="post-card">
                <h3>{post.data.title}</h3>
                <p>{post.data.description}</p>
                <time>{new Date(post.data.publishDate).toLocaleDateString()}</time>
              </article>
            </a>
          ))}
        </div>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    display: flex;
    flex: 1;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
    max-width: 800px;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
    margin-bottom: 1.5em;
  }

  .stats-section {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }

  /* Latest Posts Section */
  .latest-posts {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--theme-code-inline-bg);
  }

  .latest-posts h2 {
    font-family: var(--font-family-sans);
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    color: var(--text-main);
    text-align: center;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  .post-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .post-card {
    background: var(--background-secondary);
    border: 1px solid var(--theme-code-inline-bg);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), transparent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .post-card-link:hover .post-card {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: var(--primary-color);
  }

  .post-card-link:hover .post-card::before {
    transform: scaleX(1);
  }

  .post-card h3 {
    font-family: var(--font-family-sans);
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-card h3 {
    color: var(--text-main);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-card-link:hover .post-card h3 {
    color: var(--primary-color);
  }

  .post-card p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.4;
    margin-bottom: 1rem;
    /* Limit the description to a small number of lines for consistent card size */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    /* subtle fade at the bottom so truncated text feels graceful */
    -webkit-mask-image: linear-gradient(180deg, rgba(0,0,0,1) 65%, rgba(0,0,0,0));
            mask-image: linear-gradient(180deg, rgba(0,0,0,1) 65%, rgba(0,0,0,0));
  }

  .post-card time {
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-family: var(--font-family-sans);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Make the link wrapper stretch so all cards in a row match height */
  .post-card-link {
    display: block;
    height: 100%;
  }

  /* Keep the time at the bottom of the card for consistent layout */
  .post-card time {
    margin-top: auto;
  }

  /* Stats Section */
  .stats-section {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .post-card {
      padding: 1.25rem;
    }
    
    .stats-section {
      justify-content: center;
    }
  }
</style>
