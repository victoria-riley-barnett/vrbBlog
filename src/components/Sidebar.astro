---
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');

const pages = [
  { title: 'Victoria', slug: 'about' },
  { title: 'Resume', slug: 'about#resume' },
  { title: 'Work History', slug: 'about#work-history' }
];

// Group posts by tags
const postsByTag = {};
allPosts.forEach(post => {
  if (post.data.tags) {
    post.data.tags.forEach(tag => {
      if (!postsByTag[tag]) {
        postsByTag[tag] = [];
      }
      postsByTag[tag].push(post);
    });
  }
});

// Sort tags alphabetically
const sortedTags = Object.keys(postsByTag).sort();

// Sort posts within each tag by publish date (newest first)
sortedTags.forEach(tag => {
  postsByTag[tag].sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());
});
---

<script>
  function toggleSidebar() {
    const sidebar = document.querySelector('.sidebar');
    sidebar.classList.toggle('collapsed');
  }

  // Auto-expand folders when page loads based on URL hash
  document.addEventListener('DOMContentLoaded', () => {
    const hash = window.location.hash;
    if (hash) {
      const targetElement = document.querySelector(hash);
      if (targetElement) {
        // Expand all parent details elements
        let currentElement = targetElement.parentElement;
        while (currentElement) {
          if (currentElement.tagName === 'DETAILS') {
            (currentElement as HTMLDetailsElement).open = true;
          }
          currentElement = currentElement.parentElement;
        }
      }
    }
  });
  
</script>

<aside class="sidebar">
  <div class="sidebar-header">
    <h3 class="sidebar-title">Explorer</h3>
    <button class="sidebar-toggle" onclick="toggleSidebar()" title="Toggle sidebar">
      <span class="toggle-icon">≡</span>
    </button>
  </div>
  
  <div class="sidebar-content">
    <div class="sidebar-section">
      <div class="sidebar-folder-static">
        <a href="/" class="sidebar-index-link">
          index
        </a>
        <ul class="sidebar-sublist">
          <li class="sidebar-subitem">
            <details class="sidebar-folder" open>
              <summary class="sidebar-folder-summary">
                Pages
                <span class="sidebar-count">({pages.length})</span>
              </summary>
              <ul class="sidebar-sublist">
                {pages.map(page => (
                  <li class="sidebar-subitem">
                    <a href={`/${page.slug}`} class="sidebar-sublink">
                      {page.title}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          </li>
          {sortedTags.length > 0 && (
            <li class="sidebar-subitem">
              <details class="sidebar-folder" open>
                <summary class="sidebar-folder-summary">
                  Tags
                  <span class="sidebar-count">({sortedTags.length})</span>
                </summary>
                <ul class="sidebar-sublist">
                  {sortedTags.map(tag => (
                    <li class="sidebar-subitem">
                      <details class="sidebar-folder">
                        <summary class="sidebar-folder-summary">
                          {tag}
                          <span class="sidebar-count">({postsByTag[tag].length})</span>
                        </summary>
                        <ul class="sidebar-sublist">
                          {postsByTag[tag].map(post => (
                            <li class="sidebar-subitem">
                              <a href={`/blog/${post.data.slug}`} class="sidebar-sublink">
                                {post.data.title}
                              </a>
                            </li>
                          ))}
                        </ul>
                      </details>
                    </li>
                  ))}
                </ul>
              </details>
            </li>
          )}
        </ul>
      </div>
    </div>
  </div>
</aside>

