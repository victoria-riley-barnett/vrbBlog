---
import Logo from './Logo.astro'
import Nav from './Nav.astro'
---

<style>
  header {
    display: flex;
    align-items: center;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }

  @media screen and (max-width: 520px) {
    header {
      padding: 2em 0;
      flex-direction: column;
      align-items: center;
      gap: 0.6rem;
    }
  }
</style>

<header>
  <Logo />
  <Nav />
</header>
